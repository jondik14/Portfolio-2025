        .playground-overlay.active .bento-item:nth-child(2) { transition-delay: 0.15s; }
        .playground-overlay.active .bento-item:nth-child(3) { transition-delay: 0.2s; }
        .playground-overlay.active .bento-item:nth-child(4) { transition-delay: 0.25s; }
