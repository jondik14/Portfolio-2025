            object-position: center 30%;
            display: block;
            filter: grayscale(100%);
            transition: filter 0.6s ease;
        }

        .portrait-wrapper:hover .headshot-img {
            filter: grayscale(0%);
        }

        /* ===== MOSAIC PORTRAIT GRID ===== */
        #portraitMosaic {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        /* Portrait Base - BW with colored vision on hover */
        .portrait-base {
            position: relative;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .portrait-base.hidden {
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.4s ease;
        }

        .bw-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center 30%;
        }

        /* Colored Vision Layer - follows mouse */
        .colored-vision-layer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 0.2s ease;
            pointer-events: none;
        }

        .colored-vision-layer.active {
            opacity: 1;
        }

        .colored-vision-layer .colored-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center 30%;
            mask-image: radial-gradient(circle 150px at var(--mouse-x, 50%) var(--mouse-y, 50%), black 0%, transparent 100%);
            -webkit-mask-image: radial-gradient(circle 150px at var(--mouse-x, 50%) var(--mouse-y, 50%), black 0%, transparent 100%);
        }

        /* Hover Prompt */
        .hover-prompt {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 20px;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
            border-radius: var(--radius-full);
            color: white;
            font-size: var(--text-sm);
            font-weight: 500;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
            z-index: 10;
        }

        #portraitMosaic:hover .hover-prompt {
            opacity: 1;
        }

        #portraitMosaic:hover .hover-prompt span::after {
            content: '...';
            animation: dots 1.5s infinite;
        }

        @keyframes dots {
            0%, 20% { content: ''; }
            40% { content: '.'; }
            60% { content: '..'; }
            80%, 100% { content: '...'; }
        }

        /* Mosaic Grid - Hidden initially */
        .mosaic-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: repeat(3, 1fr);
            z-index: 2;
            gap: 0;
            background: #e0e0e0;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.5s ease;
        }

        .mosaic-grid.active {
            opacity: 1;
            pointer-events: auto;
        }

        /* Each mosaic piece */
        .mosaic-piece {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 100%;
            background: #f0f0f0;
            opacity: 0;
            transform: scale(0.8);
            transition: opacity 0.4s ease, transform 0.4s ease;
        }

        .mosaic-grid.active .mosaic-piece {
            opacity: 1;
            transform: scale(1);
        }

        /* Staggered animation for pieces */
        .mosaic-grid.active .mosaic-piece:nth-child(1) { transition-delay: 0.05s; }
        .mosaic-grid.active .mosaic-piece:nth-child(2) { transition-delay: 0.1s; }
        .mosaic-grid.active .mosaic-piece:nth-child(3) { transition-delay: 0.15s; }
        .mosaic-grid.active .mosaic-piece:nth-child(4) { transition-delay: 0.2s; }
        .mosaic-grid.active .mosaic-piece:nth-child(5) { transition-delay: 0.25s; }
        .mosaic-grid.active .mosaic-piece:nth-child(6) { transition-delay: 0.3s; }
        .mosaic-grid.active .mosaic-piece:nth-child(7) { transition-delay: 0.35s; }
        .mosaic-grid.active .mosaic-piece:nth-child(8) { transition-delay: 0.4s; }
        .mosaic-grid.active .mosaic-piece:nth-child(9) { transition-delay: 0.45s; }
        .mosaic-grid.active .mosaic-piece:nth-child(10) { transition-delay: 0.5s; }
        .mosaic-grid.active .mosaic-piece:nth-child(11) { transition-delay: 0.55s; }
        .mosaic-grid.active .mosaic-piece:nth-child(12) { transition-delay: 0.6s; }

        /* Mosaic Grid - 4x3 grid of different versions */
        .mosaic-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: repeat(3, 1fr);
            z-index: 2;
            gap: 0; /* No gap for seamless alignment */
        }

        /* Each mosaic piece - shows only a portion of the image */
        .mosaic-piece {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 100%;
            background: #f0f0f0;
        }

        /* Each piece shows exactly 1/4 width and 1/3 height of its image */
        .mosaic-piece img {
            position: absolute;
            /* Image is exactly 4x container width and 3x container height */
            width: 400%;
            height: 300%;
            max-width: none;
            max-height: none;
            object-fit: cover;
        }

        /* Column positioning (4 columns, each 25% of image width) */
        .mosaic-piece[data-index="0"] img,
        .mosaic-piece[data-index="4"] img,
        .mosaic-piece[data-index="8"] img { left: 0%; }

        .mosaic-piece[data-index="1"] img,
        .mosaic-piece[data-index="5"] img,
        .mosaic-piece[data-index="9"] img { left: -100%; }

        .mosaic-piece[data-index="2"] img,
        .mosaic-piece[data-index="6"] img,
        .mosaic-piece[data-index="10"] img { left: -200%; }

        .mosaic-piece[data-index="3"] img,
        .mosaic-piece[data-index="7"] img,
        .mosaic-piece[data-index="11"] img { left: -300%; }

        /* Row positioning (3 rows, each 33.33% of image height) */
        .mosaic-piece[data-index="0"] img,
        .mosaic-piece[data-index="1"] img,
        .mosaic-piece[data-index="2"] img,
        .mosaic-piece[data-index="3"] img { top: 0%; }

        .mosaic-piece[data-index="4"] img,
        .mosaic-piece[data-index="5"] img,
        .mosaic-piece[data-index="6"] img,
        .mosaic-piece[data-index="7"] img { top: -100%; }

        .mosaic-piece[data-index="8"] img,
        .mosaic-piece[data-index="9"] img,
        .mosaic-piece[data-index="10"] img,
        .mosaic-piece[data-index="11"] img { top: -200%; }

        /* Hover effect on individual pieces */
        .mosaic-piece:hover {
            transform: scale(0.98);
            z-index: 10;
        }

        /* Full Reveal Layer - Shows complete images */
        .mosaic-reveal-layer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 3;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .mosaic-reveal-layer.active {
            opacity: 1;
        }

        .mosaic-reveal-layer img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center center;
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .mosaic-reveal-layer img.active {
            opacity: 1;
        }

        /* Base image - hidden when mosaic is active */
        #baseHeadshot {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: 1;
            opacity: 0; /* Hide base, mosaic shows instead */
        }

        /* ===== WORK SECTION  Clean Bento Grid Layout ===== */
        .work-section-clean {
            padding: var(--space-16) 0;
            background: var(--surface);
        }

        .work-section-title {
            font-size: clamp(2rem, 5vw, 3rem);
            margin-bottom: var(--space-2);
            letter-spacing: -0.02em;
            font-weight: 700;
            color: var(--text-primary);
        }

        .work-section-subtitle {
            font-size: clamp(1.125rem, 2.5vw, 1.5rem);
            color: var(--text-secondary);
            margin-bottom: var(--space-10);
            line-height: 1.6;
            max-width: 600px;
        }

        /* Bento Grid Layout */
        .work-bento-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: auto auto;
            gap: var(--space-5);
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Work Cards */
        .work-card {
            position: relative;
            background: var(--surface-elevated);
            border-radius: var(--radius-xl);
            overflow: hidden;
            border: 1px solid var(--border-default);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .work-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border-color: var(--border-default);
        }

        .work-card-link {
            display: block;
            text-decoration: none;
            color: inherit;
        }

        /* Featured Card  Spans 2 columns */
        .work-card-featured {
            grid-column: span 2;
            grid-row: span 1;
        }

        /* Medium Cards */
        .work-card-medium {
            grid-column: span 1;
        }

        /* Standard Cards */
        .work-card:not(.work-card-featured):not(.work-card-medium) {
            grid-column: span 1;
        }

        /* Card Image Container */
        .work-card-image {
            position: relative;
            aspect-ratio: 16/10;
            overflow: hidden;
            background: var(--border-subtle);
        }

        .work-card-featured .work-card-image {
            aspect-ratio: 16/9;
        }

        .work-card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .work-card:hover .work-card-image img {
            transform: scale(1.05);
        }

        /* Hover Overlay */
        .work-card-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .work-card:hover .work-card-overlay {
            opacity: 1;
        }

        .work-card-cta {
            padding: var(--space-3) var(--space-5);
            background: #fff;
            color: #000;
            font-weight: 600;
            font-size: var(--text-sm);
            border-radius: var(--radius-full);
            transform: translateY(10px);
            transition: transform 0.3s ease;
        }

        .work-card:hover .work-card-cta {
            transform: translateY(0);
        }

        /* Card Content */
        .work-card-content {
            padding: var(--space-4);
        }

        .work-card-meta {
            display: flex;
            gap: var(--space-2);
            margin-bottom: var(--space-2);
            flex-wrap: wrap;
        }

        .work-card-tag {
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--text-muted);
            padding: 4px 10px;
            background: var(--border-subtle);
            border-radius: var(--radius-full);
        }

        .work-card-title {
            font-family: var(--font-heading);
            font-size: var(--text-lg);
            font-weight: 700;
            line-height: 1.3;
            color: var(--text-primary);
            margin: 0 0 var(--space-1);
            transition: color 0.2s ease;
        }

        .work-card:hover .work-card-title {
            color: var(--accent);
        }

        .work-card-client {
            font-size: var(--text-sm);
            color: var(--text-secondary);
            font-weight: 500;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .work-bento-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: var(--space-4);
            }

            .work-card-featured {
                grid-column: span 2;
            }

            .work-card-medium,
            .work-card:not(.work-card-featured):not(.work-card-medium) {
                grid-column: span 1;
            }
        }

        @media (max-width: 640px) {
            .work-section-clean {
                padding: var(--space-10) 0;
            }

            .work-bento-grid {
                grid-template-columns: 1fr;
                gap: var(--space-4);
            }

            .work-card-featured,
