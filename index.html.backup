        // Hero entrance: 400ms after load, then animate in
        if (document.readyState === 'complete') {
            setTimeout(initHeroEntrance, 400);
        } else {
            window.addEventListener('load', function() { setTimeout(initHeroEntrance, 400); });
        }

        // Initialize scroll-triggered reveal animations
        if (document.readyState === 'complete') {
            setTimeout(initRevealAnimations, 100);
        } else {
            window.addEventListener('load', function() {
                setTimeout(initRevealAnimations, 100);
            });
        }

        // ===== OLD SCROLL ANIMATION OBSERVER (Disabled in favor of GSAP) =====
        /*
        function initScrollAnimations() {
            // ...
        }
        */

        // ===== PLAYGROUND TRANSITION =====
        function openPlayground() {
            const overlay = document.querySelector('.playground-overlay');
            const mainContent = document.querySelectorAll('body > *:not(.playground-overlay):not(.cursor-glow):not(.grain-overlay)');
            const nav = document.querySelector('.nav-container');
            
            // Animate main content elements off screen
            gsap.to(mainContent, {
                y: -100,
                opacity: 0,
                duration: 0.6,
                stagger: 0.05,
                ease: 'power3.inOut',
                onComplete: () => {
                    // Hide main content
                    mainContent.forEach(el => el.style.visibility = 'hidden');
                    
                    // Show playground
                    overlay.classList.add('active');
                    document.body.style.overflow = 'hidden';
                    
                    // Animate bento items in
                    gsap.fromTo('.bento-item', 
                        { 
                            y: 50, 
                            opacity: 0,
                            scale: 0.9
                        },
                        { 
                            y: 0, 
                            opacity: 1,
                            scale: 1,
                            duration: 0.8,
                            stagger: 0.1,
                            ease: 'back.out(1.2)',
                            delay: 0.2
                        }
                    );
                }
            });
        }

        function closePlayground() {
            const overlay = document.querySelector('.playground-overlay');
            const mainContent = document.querySelectorAll('body > *:not(.playground-overlay):not(.cursor-glow):not(.grain-overlay)');
            
            // Animate bento items out
            gsap.to('.bento-item', {
                y: -30,
                opacity: 0,
                scale: 0.95,
                duration: 0.4,
                stagger: 0.05,
                ease: 'power2.in',
                onComplete: () => {
                    overlay.classList.remove('active');
                    document.body.style.overflow = '';
                    
                    // Show and animate main content back in
                    mainContent.forEach(el => el.style.visibility = '');
                    gsap.fromTo(mainContent, 
                        { y: 100, opacity: 0 },
                        { 
                            y: 0, 
                            opacity: 1, 
                            duration: 0.6, 
                            stagger: 0.05,
                            ease: 'power3.out'
                        }
                    );
                }
            });
        }

        // ===== MOSAIC PORTRAIT INTERACTION =====
        (function() {
            const portraitMosaic = document.getElementById('portraitMosaic');
            if (!portraitMosaic) return;

            const portraitBase = document.getElementById('portraitBase');
            const coloredVisionLayer = document.getElementById('coloredVisionLayer');
            const mosaicGrid = document.getElementById('mosaicGrid');
            const revealLayer = document.getElementById('revealLayer');
            const mosaicPieces = portraitMosaic.querySelectorAll('.mosaic-piece');
            const revealImages = revealLayer ? revealLayer.querySelectorAll('img') : [];
            
            let isSplit = false;
            let currentIndex = -1;

            // Mouse move - update colored vision position
            portraitMosaic.addEventListener('mousemove', function(e) {
                if (isSplit) return;
                
                const rect = portraitMosaic.getBoundingClientRect();
                const x = ((e.clientX - rect.left) / rect.width) * 100;
                const y = ((e.clientY - rect.top) / rect.height) * 100;
                
                // Update CSS variables for mask position
                coloredVisionLayer.style.setProperty('--mouse-x', x + '%');
                coloredVisionLayer.style.setProperty('--mouse-y', y + '%');
                coloredVisionLayer.classList.add('active');
            });

            // Mouse leave - hide colored vision
            portraitMosaic.addEventListener('mouseleave', function() {
                if (isSplit) return;
                coloredVisionLayer.classList.remove('active');
            });

            // Click to split into mosaic
            portraitMosaic.addEventListener('click', function() {
                if (isSplit) return;
                isSplit = true;
                
                // Hide base portrait
                portraitBase.classList.add('hidden');
                coloredVisionLayer.classList.remove('active');
                
                // Show mosaic grid with animation
                setTimeout(() => {
                    mosaicGrid.classList.add('active');
                }, 100);
            });

            // Hover over mosaic pieces (only when split)
            mosaicPieces.forEach((piece, index) => {
                piece.addEventListener('mouseenter', function() {
                    if (!isSplit || index === currentIndex) return;
                    currentIndex = index;
                    
                    // Show reveal layer with full image
                    revealLayer.classList.add('active');
                    revealImages.forEach(img => img.classList.remove('active'));
                    if (revealImages[index]) {
                        revealImages[index].classList.add('active');
                    }
                    
                    // Fade out other pieces
                    mosaicPieces.forEach((p, i) => {
                        p.style.opacity = i === index ? '1' : '0.2';
                    });
                });
            });

            // Mouse leave mosaic - reset pieces
            portraitMosaic.addEventListener('mouseleave', function() {
                if (!isSplit) return;
                currentIndex = -1;
                revealLayer.classList.remove('active');
                revealImages.forEach(img => img.classList.remove('active'));
                mosaicPieces.forEach(p => p.style.opacity = '1');
            });

            // Double click to reset to BW portrait
            portraitMosaic.addEventListener('dblclick', function() {
                if (!isSplit) return;
                isSplit = false;
                
                mosaicGrid.classList.remove('active');
                revealLayer.classList.remove('active');
                revealImages.forEach(img => img.classList.remove('active'));
                
                setTimeout(() => {
                    portraitBase.classList.remove('hidden');
                }, 300);
            });
        })();

        // Tools Legend - Category Filter Interaction
        const legendItems = document.querySelectorAll('.legend-item');
        const toolCards = document.querySelectorAll('.tool-card');
        
        if (legendItems.length > 0) {
            legendItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    const category = this.dataset.category;
                    
                    toolCards.forEach(card => {
                        if (card.dataset.category === category) {
                            card.style.opacity = '1';
                            card.style.transform = 'scale(1.05)';
                            card.style.zIndex = '10';
                        } else {
                            card.style.opacity = '0.4';
                            card.style.transform = 'scale(0.95)';
                        }
                    });
                });
                
                item.addEventListener('mouseleave', function() {
                    toolCards.forEach(card => {
                        card.style.opacity = '1';
                        card.style.transform = '';
                        card.style.zIndex = '';
                    });
                });
            });
        }

        // Particle effect for playground button on hover
        const playgroundBtn = document.querySelector('.playground-btn');
        if (playgroundBtn) {
            playgroundBtn.addEventListener('mouseenter', function() {
                // Add extra glow pulse effect
                gsap.to(this, {
                    boxShadow: '0 8px 40px rgba(0, 0, 0, 0.15), inset 0 1px 0 rgba(255, 255, 255, 0.5), 0 0 40px rgba(255, 0, 128, 0.3), 0 0 80px rgba(0, 255, 255, 0.2)',
                    duration: 0.3
                });
            });
            
            playgroundBtn.addEventListener('mouseleave', function() {
                gsap.to(this, {
                    boxShadow: '',
                    duration: 0.3,
                    clearProps: 'boxShadow'
                });
            });
        }

    </script>

