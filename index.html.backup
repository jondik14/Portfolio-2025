        }

        .other-project-link:hover {
            gap: var(--space-2);
        }

        @media (max-width: 640px) {
            .other-projects-grid {
                grid-template-columns: 1fr;
            }
        }

        /* ===== SHAPE BLUR EFFECT ===== */
        /* ===== GRADUAL BLUR EFFECT ===== */
        .gradual-blur {
            position: fixed;
            left: 0;
            right: 0;
            pointer-events: none;
            z-index: 900;
            overflow: hidden;
            isolation: isolate;
        }
        .gradual-blur-top {
            top: 0;
        }
        .gradual-blur-bottom {
            bottom: 0;
        }
        .gradual-blur-inner {
            position: relative;
            width: 100%;
            height: 100%;
        }
        .gradual-blur-inner > div {
            pointer-events: none;
            will-change: backdrop-filter;
        }

        .link_icon {
            width: 20px;
            height: 14px;
        }

        .link_icon svg {
            width: 100%;
            height: 100%;
        }

        /* ===== OTHER SECTION ===== */
        .other-section {
            padding: var(--space-20) 0;
            background: var(--surface);
        }

        .other-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-6);
        }

        @media (max-width: 640px) {
            .other-section {
                padding: var(--space-12) 0;
            }
            
            .other-grid { 
                grid-template-columns: 1fr;
                gap: var(--space-4);
            }
            
            .mini-card {
                padding: var(--space-6);
            }
        }

        .mini-card {
            background: rgba(252, 252, 253, 0.85); /* Semi-transparent */
            backdrop-filter: blur(12px);
            padding: var(--space-10);
            border-radius: var(--radius-2xl);
